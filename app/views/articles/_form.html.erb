    <%= f.text_field :advertisement %>
  </div>
  <div class="field">
    <%= f.label :initials %><br>
    <%= f.text_field :initials %>
  </div>
  <div class="field">
    <%= f.label :release %><br>
    <%= f.check_box :release %>
