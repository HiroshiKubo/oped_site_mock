  <% end %>

  <div class="field">
    <%= f.label :anime_id %><br>
    <% if @anime_id != nil %>
      <%= f.number_field :anime_id, value: @anime_id %>
    <% else %>
      <%= f.number_field :anime_id %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <% if @title != nil %>
      <%= f.text_field :title, value: @title %>
    <% else %>
      <%= f.text_field :title %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :video_id %><br>
    <% if @video_id != nil %>
      <%= f.number_field :video_id, value: @video_id %>
    <% else %>
      <%= f.number_field :video_id %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :oped %><br>
    <%= f.text_field :oped %>
  </div>
  <div class="field">
    <%= f.label :number %><br>
    <%= f.number_field :number %>
  </div>
  <div class="field">
    <%= f.label :advertisement ,value: "広告1" %><br>
